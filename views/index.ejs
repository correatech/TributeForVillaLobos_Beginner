    <body>
        <div class="container">
            <header>
                <h1>Bachianas Brasileiras</h1>
            </header>
            <main>
                <section class="main-image">
                    <figure>
                        <img src="/public/VillaLobosPortrait.jpg" alt="Portrait of Heitor Villa-Lobos" title="Portrait of Heitor Villa-Lobos" />
